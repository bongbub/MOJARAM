<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray">

        <RelativeLayout
            android:id="@+id/relativebox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/linear2_shape"

            android:layout_margin="18dp"
            android:padding="10dp">
            <TextView
                android:id="@+id/textToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:text="@string/stylebook_tip"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewALl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:text="@string/view_all"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/stylebook2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp" />

            <TextView
                android:id="@+id/stylebook3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stylebook2"/>

            <TextView
                android:id="@+id/textNoWhere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stylebook3"
                android:layout_marginStart="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="7dp"
                android:text="@string/nowhere"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/textNoWhere"
                android:layout_margin="7dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/textcant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:layout_marginStart="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="7dp"
                android:text="@string/cant"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/textcant"
                android:layout_margin="7dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/textsummer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line2"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="10dp"
                android:text="@string/summer"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </RelativeLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray">

            <TextView
                android:id="@+id/thesedays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/card1"
                android:text="러블리함의 대명사 히피펌을 가발로"
                android:layout_marginStart="13dp"
                android:textStyle="bold"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="13dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/card1"
                android:layout_marginEnd="13dp"
                android:text="모두보기"
                android:textSize="15sp"
                android:textColor="@color/doubledarkgray"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="13dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintDimensionRatio="h, 1:1.2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/thesedays"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.92">

                <GridLayout
                    android:id="@+id/grid1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="3"
                    android:orientation="horizontal"
                    android:alignmentMode="alignMargins"
                    android:rowCount="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:scaleType="center"
                        android:layout_marginEnd="0.5dp"
                        android:layout_marginBottom="0.5dp"
                        android:background="@drawable/style1"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowSpan="2"
                        android:layout_rowWeight="1"
                        android:layout_columnSpan="2"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:scaleType="center"
                        android:background="@drawable/style2"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:scaleType="center"
                        android:layout_marginEnd="0.5dp"
                        android:layout_marginBottom="0.5dp"
                        android:background="@drawable/style3" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:scaleType="center"
                        android:layout_marginEnd="0.5dp"
                        android:background="@drawable/style4" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:scaleType="center"
                        android:layout_marginEnd="0.5dp"
                        android:layout_marginTop="0.5dp"
                        android:background="@drawable/style5" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:scaleType="center"
                        android:layout_marginEnd="0.5dp"
                        android:layout_marginTop="0.5dp"
                        android:background="@drawable/style6" />
                </GridLayout>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/changelinear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/card1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/linear_selector"
                android:layout_marginTop="18dp"
                android:clickable="true"
                android:padding="9dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:scaleType="center"
                    android:background="@drawable/rotate"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:text="다른 스타일도 궁금해요"/>
                <TextView
                    android:id="@+id/curnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="/"/>
                <TextView
                    android:id="@+id/totnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:text="3"/>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="13dp"
            android:background="@color/gray"
            android:clickable="true">

            <TextView
                android:id="@+id/thesedaysnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/card2"
                android:text="같은 가발 다른 스타일링"
                android:layout_marginStart="13dp"
                android:textStyle="bold"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="13dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/card2"
                android:layout_marginEnd="13dp"
                android:text="모두보기"
                android:textSize="15sp"
                android:textColor="@color/doubledarkgray"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="13dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintDimensionRatio="h, 1:1.2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/thesedaysnail"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.92">

                <GridLayout
                    android:id="@+id/grid2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="3"
                    android:orientation="horizontal"
                    android:alignmentMode="alignMargins"
                    android:rowCount="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:scaleType="center"
                        android:layout_marginEnd="0.5dp"
                        android:layout_marginBottom="0.5dp"
                        android:background="@drawable/style7"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowSpan="2"
                        android:layout_rowWeight="1"
                        android:layout_columnSpan="2"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:scaleType="center"
                        android:background="@drawable/style8" />
                </GridLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            android:background="@drawable/add">
        </ImageView>

        <LinearLayout
            android:id="@+id/linearmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="17dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="13dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공지"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[이벤트] 첫방문 시 최대 50% 할인 매장 목록"
                    android:textColor="@color/black"
                    android:layout_marginStart="7dp"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:id="@+id/textchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="11dp"
                    android:layout_gravity="center_horizontal"
                    android:text="사업자정보 · 이용약관 · 개인정보처리방침 · 사업자정보확인"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="9sp"
                    android:text="(주)모자람없는은 통신판매중개자로서 모자람의 거래당사자가 아니며,"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="9sp"
                    android:text="입점매장이 등록한 정보 및 거래에 대해 책임을 지지 않습니다."/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="9sp"
                    android:text="ⓒ MOJARAM"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>